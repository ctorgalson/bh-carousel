{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationDir": "dist/js",
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom", "dom.iterable"],
    "module": "NodeNext",
    "moduleDetection": "force",
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "verbatimModuleSyntax": true
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules"]
}
