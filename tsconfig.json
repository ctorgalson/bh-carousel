{
  "compilerOptions": {
    "allowJs": true,
    // "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom", "dom.iterable"],
    "module": "NodeNext",
    "moduleDetection": "force",
    "noUncheckedIndexedAccess": true,
    //"outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "verbatimModuleSyntax": true
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules"]
}
